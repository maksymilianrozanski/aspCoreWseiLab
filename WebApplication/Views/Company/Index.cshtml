@model CompanyModel

<h1>Company management</h1>
<h2> Add new company</h2>
<div id="success-alert" class="alert alert-success" style="display: none">
    Item added
    successfully
</div>
@using (Html.BeginForm())
{
    <form method="post">
        <div class="form-group">
            @Html.LabelFor(x => x.Name, "Company name")
            @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Description, "Company description")
            @Html.TextBoxFor(x => x.Description, new {@class = "form-control"})
        </div>

        <div class="form-group form-check">
            @Html.CheckBoxFor(x => x.IsVisible, new {@class = "form-check-input"})
            @Html.LabelFor(x => x.IsVisible, "Visible?", new {@class = "form-control"})
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary"> Add Company</button>
        </div>
        <div class="form-group">
            <input type="submit" value="Add new item">
        </div>
    </form>
}

@section Scripts
{
    <script src="~/js/addNewItem.js"></script>
}